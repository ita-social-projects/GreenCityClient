{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "module": "es2020",
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "ES2022",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2019", "dom"],
    "paths": {
      "@global-auth/*": ["src/app/main/component/auth/components/*"],
      "@global-core/*": ["src/app/main/component/core/*"],
      "@eco-news-models/*": ["src/app/main/component/eco-news/models/*"],
      "@eco-news-service/*": ["src/app/main/component/eco-news/services/*"],
      "@global-errors/*": ["src/app/main/component/errors/*"],
      "@home-models/*": ["src/app/main/component/home/models/*"],
      "@shared/*": ["src/app/main/component/shared/*"],
      "@global-user/*": ["src/app/main/component/user/*"],
      "@user-models/*": ["src/app/main/component/user/models/*"],
      "@language-service/*": ["src/app/i18n/*"],
      "@global-models/*": ["src/app/main/model/*"],
      "@global-service/*": ["src/app/main/service/*"],
      "@auth-service/*": ["src/app/main/service/auth/*"],
      "@global-images/*": ["src/assets/img/*"],
      "@eco-news-images/*": ["src/assets/img/icon/econews/*"],
      "@footer-images/*": ["src/assets/img/icon/footer/*"],
      "@environment/*": ["src/environments/*"],
      "@pipe/*": ["src/app/main/pipe/*"]
    },
    "useDefineForClassFields": false
  },
  "angularCompilerOptions": {
    "fullTemplateTypeCheck": true,
    "strictInjectionParameters": true
  }
}
