{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "module": "esnext",
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es2015",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2018",

      "dom"

    ],
    "paths": {
      "@global-service/*": ["src/app/service/*"],
      "@eco-news-service/*": ["src/app/component/eco-news/services/*"],
      "@store/*": ["src/app/store/*"],
      "@eco-news-store/*": ["src/app/component/eco-news/store/*"],
      "@eco-news-models/*": ["src/app/component/eco-news/models/*"]
    }
  },
  "angularCompilerOptions": {
    "fullTemplateTypeCheck": true,
    "strictInjectionParameters": true
  }
}
